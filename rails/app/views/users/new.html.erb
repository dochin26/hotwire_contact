<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @user) do |f| %>
            <%= render 'shared/error_messages' %>

            <%= f.label :name, t('sign_up.contents.name') %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :email, t('sign_up.contents.email') %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password, t('sign_up.contents.password') %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation, t('sign_up.contents.confirmation') %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.submit t('sign_up.contents.create_account'), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>